#!/bin/bash

distro=$(cat /usr/share/doc/megasync/distro)
if [ "x$distro" == "x" ]; then
	distro=$(lsb_release -ds)
fi

ver=$(cat /usr/share/doc/megasync/version)
if [ "x$ver" == "x" ]; then
	ver=$(lsb_release -rs)
fi

if [[ $distro = "Raspbian GNU/Linux 10"* ]]; then
    str="Raspbian_10.0"
elif [[ $distro = "Raspbian GNU/Linux 9"* ]]; then
    str="Raspbian_9.0"
elif [[ $distro = "Raspbian GNU/Linux 8"* ]]; then
    str="Raspbian_8.0"
# Ubuntu
elif [[ $ver = "21.10" ]]; then
    str="xUbuntu_21.10"
elif [[ $ver = "21.04" ]]; then
    str="xUbuntu_21.04"
elif [[ $ver = "20.10" ]]; then
    str="xUbuntu_20.10"
elif [[ $ver = "20.04" ]]; then
    str="xUbuntu_20.04"
elif [[ $ver = "19.10" ]]; then
    str="xUbuntu_19.10"
elif [[ $ver = "19.04" ]]; then
    str="xUbuntu_19.04"
elif [[ $ver = "18.10" ]]; then
    str="xUbuntu_18.10"
elif [[ $ver = "18.04" ]]; then
    str="xUbuntu_18.04"
elif [[ $ver = "17.10" ]]; then
    str="xUbuntu_17.10"
elif [[ $ver = "17.04" ]]; then
    str="xUbuntu_17.04"
elif [[ $ver = "16.10" ]]; then
    str="xUbuntu_16.10"
elif [[ $ver = "16.04" ]]; then
    str="xUbuntu_16.04"
elif [[ $ver = "15.10" ]]; then
    str="xUbuntu_15.10"
elif [[ $ver = "15.04" ]]; then
    str="xUbuntu_15.04"
elif [[ $ver = "14.10" ]]; then
    str="xUbuntu_14.10"
elif [[ $ver = "14.04" ]]; then
    str="xUbuntu_14.04"
elif [[ $ver = "13.10" ]]; then
    str="xUbuntu_13.10"
elif [[ $ver = "12.10" ]]; then
    str="xUbuntu_12.10"
elif [[ $ver = "12.04" ]]; then
    str="xUbuntu_12.04"
# Debian
elif [[ $ver == 6.* ]]; then
    str="Debian_6.0"
elif [[ $ver == 7.* ]]; then
    str="Debian_7.0"
elif [[ $ver == 8.* ]]; then
    str="Debian_8.0"
elif [[ $ver == 9.* ]]; then
    str="Debian_9.0"
elif [[ $ver == 10* ]]; then
    str="Debian_10.0"
elif [[ $ver == 11* ]]; then
    str="Debian_11"
elif [[ $ver = "testing" ]]; then
    str="Debian_testing"
# Elementary OS Luna uses 12.04
elif [[ $distro = "elementary OS Luna" ]]; then
    str="xUbuntu_12.04"
# Elementary OS Freya Ubuntu 14.04 LTS
elif [[ $distro = "elementary OS Freya" ]]; then
    str="xUbuntu_14.04"
# Linux Mint 13 Maya LTS (Ubuntu 12.04)
elif [[ $distro = "Linux Mint 13 Maya" ]]; then
    str="xUbuntu_12.04"
# Linux Mint 17.1 Rebecca LTS (Ubuntu 14.04)
elif [[ $distro = "Linux Mint 17.1 Rebecca" ]]; then
    str="xUbuntu_14.04"
# Linux Mint 17.2 Rafaela LTS (Ubuntu 14.04)
elif [[ $distro = "Linux Mint 17.1 Rafaela" ]]; then
    str="xUbuntu_14.04"
# fallback to LTS version, unsupported
else
    str="xUbuntu_15.04"
fi

if [ -d /etc/apt/sources.list.d ]; then
cat >/etc/apt/sources.list.d/megasync.list <<EOF
deb https://mega.nz/linux/MEGAsync/$str/ ./
EOF
fi

